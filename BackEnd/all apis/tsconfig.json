{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "Node",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"removeComments": true
	},
	"include": ["src", "src/types"],
	"exclude": ["node_modules", "dist"]
}
